# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=clothesapp
DB_USER=clothesapp_user
DB_PASSWORD=your_database_password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-256-bits-minimum
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-256-bits-minimum

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# PayPal Configuration (if using PayPal)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_ENVIRONMENT=sandbox

# DHL API Configuration
DHL_API_KEY=your_dhl_api_key
DHL_API_SECRET=your_dhl_api_secret
DHL_ACCOUNT_NUMBER=your_dhl_account_number
DHL_BASE_URL=https://api-sandbox.dhl.com

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Redis Configuration (for sessions and caching)
REDIS_URL=redis://localhost:6379

# Frontend URLs
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3002
MOBILE_APP_URL=clothesapp://

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_DIR=./uploads

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
CORS_ORIGIN=http://localhost:3000,http://localhost:3002

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Exchange Rate API (for currency conversion)
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest

# Google Services (for notifications, analytics)
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_KEYFILE=./config/service-account-key.json
FIREBASE_SERVER_KEY=your_firebase_server_key

# Apple Services (for iOS notifications)
APNS_KEY_ID=your_apns_key_id
APNS_TEAM_ID=your_team_id
APNS_PRIVATE_KEY_PATH=./config/apns-key.p8

# Image Processing
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# Development/Testing
TEST_DATABASE_URL=postgresql://user:pass@localhost:5432/clothesapp_test
SEED_DATABASE=false

